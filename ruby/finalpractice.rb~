

# Pangram: determine if a sentence is a pangram
def isPangram(sentence)
  letters = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']
  for c in letters do
    if not sentence.contains c
      return false
    end if
  end
  return true

    
